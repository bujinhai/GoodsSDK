<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/g_shape_dialog_bg"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:text="标题"
            android:textColor="@color/g_main_text_color"
            android:textSize="21sp" />


        <TextView
            android:id="@+id/tvAlertDialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center|left"
            android:text="内容"
            android:textColor="@color/g_main_text_color"
            android:textSize="@dimen/font_text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/g_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/g_selector_dialog_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/g_main_text_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_deliver"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/g_line_color" />

        <TextView
            android:id="@+id/tv_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/g_selector_dialog_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textSize="@dimen/font_text_size_14"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>